{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
    {% endif %}

    <br>

    <a href="{{path('app_admin')}}">Home</a>
    <a href="{{path('product_index')}}">Product</a>
    <a href="{{path('brand_index')}}">Brand</a>
    <a href="{{path('category_index')}}">Category</a>
    <a href="{{path('color_index')}}">Color</a>
    <a href="{{path('size_index')}}">Size</a>
    <a href="{{path('stock_index')}}">Stock</a>

    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>Price</th>
                <th>Gender</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.gender }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
